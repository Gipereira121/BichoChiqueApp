<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BichoChiqueApp.Pages.Login"
             Title=""
             BackgroundColor="#ffffff">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">
            <Label 
                   Text="Login"
                   FontSize="Large"
                   FontAttributes="Bold"
                   TextColor="Black"/>

            <Label Text="Acesse sua conta para utilizar nossos serviços, acompanhar suas solicitações e gerenciar seus dados. Insira suas informações de login e continue agora!" TextColor="Black" FontSize="12"/>

            <Entry x:Name="etrEmail" Placeholder="Email" PlaceholderColor="Black" TextColor="black" Background="#FFDDB5" Margin="10, 250, 10, 0"/>
            <Entry x:Name="etrSenha" Placeholder="Senha" PlaceholderColor="Black" TextColor="black" Background="#FFDDB5" Margin="10, 0, 10, 0"/>

            <Button x:Name="btnLogin" Text="Logar" FontAttributes="Bold" TextColor="White" BackgroundColor="#FF9920" Margin="10, 0, 10, 0" Clicked="btnLogin_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>