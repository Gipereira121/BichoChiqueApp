<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BichoChiqueApp.Pages.DadosCliente"
             Title=""
             BackgroundColor="#fff">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">
            <Label 
                   Text="Dados do Cliente"
                   FontSize="Large"
                   FontAttributes="Bold"
                   TextColor="Black"/>

            <Label Text="as informações do cliente vao aq"/>

            <HorizontalStackLayout  BackgroundColor="#E7EDE4" Padding="10" Margin="10, 0, 0, 15" Spacing="10">
                <Image Source="pecil.png"/>
                <Label x:Name="editClientes" Text="Editar Cliente" TextColor="#161616" FontAttributes="Bold"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout  BackgroundColor="#E7EDE4" Padding="10" Margin="10, 0, 0, 15" Spacing="10">
                <Image Source="bin.png"/>
                <Label x:Name="deletClientes" Text="Deletar Cliente" TextColor="#161616" FontAttributes="Bold"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>